<odoo>
    <record id="action_booking_resource_agenda" model="ir.actions.act_window">
        <field name="name">Booking agenda</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">booking.resource.agenda</field>
        <field name="view_mode">tree,form</field>
<!--        <field name="view_id" ref="view_web_online_appointment_tree" /> -->
    </record>
	
	<record id="action_booking_wizard" model="ir.actions.act_window">
        <field name="name">Booking wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">booking.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
	
	<record id="action_close_service" model="ir.actions.act_window">
        <field name="name">Close service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">booking.close.service.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <menuitem id="menu_booking_resource" name="Bookings" sequence="1" web_icon="portal_resource_booking,static/src/img/icon.png"/>
    <menuitem id="menu_booking_resource_agenda" parent="menu_booking_resource" name="Agenda" sequence="1" action="calendar.action_calendar_event" />
    <menuitem id="menu_booking_resource_configuration" name="Configuration" sequence="4" parent="menu_booking_resource" />
    <menuitem id="menu_booking_resource_agenda_configuration" name="Agenda Configuration" parent="menu_booking_resource_configuration" action="action_booking_resource_agenda" sequence="1" />
    <menuitem id="menu_new_booking" name="New booking" parent="menu_booking_resource" action="action_booking_wizard" sequence="2" />
    <menuitem id="menu_close_service" name="Close service" parent="menu_booking_resource" action="action_close_service" sequence="3" />

</odoo>