<odoo>
	<data>
		<record id="close_service_form_view" model='ir.ui.view'>
			<field name="name">close.service.form.view</field>
			<field name="model">booking.close.service.wizard</field>
			<field name="arch" type="xml">
				<form>
					<span attrs="{'invisible': ['|',('agendas_domain','=','[]'),('date','=',False)]}">Select the service to close.</span>
					<span attrs="{'invisible': ['|',('agendas_domain','!=','[]'),('date','=',False)]}">There is no service open this date.</span>
					<group>
						<field name="name" invisible="1"/>
						<field name="date" />
						<field name="agendas_domain" invisible="1"/>
						<field name="agendas" domain="agendas_domain" widget="many2many_checkboxes" attrs="{'invisible': ['|',('date','=',False),('agendas_domain','=','[]')]}"/>
					</group>
					<footer>
		        		<button type="object" class="oe_highlight" name="action_close_service" attrs="{'invisible': [('agendas_domain','=','[]')]}">
		        			Accept
		        		</button>
		        		<button string="Cancel"  special="cancel"/>
		        	</footer>
				</form>
			</field>
		</record>
	</data>
</odoo>